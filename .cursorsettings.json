{
  "editor": {
    "formatOnSave": true,
    "formatOnPaste": true,
    "tabSize": 4,
    "insertSpaces": true,
    "rulers": [88],
    "wordWrap": "off",
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true,
    "bracketPairColorization.enabled": true
  },
  "python": {
    "formatter": "black",
    "formatterArgs": ["--line-length=88"],
    "linters": ["flake8", "mypy"],
    "organizeImports": {
      "provider": "isort",
      "args": [
        "--profile=black",
        "--line-length=88",
        "--multi-line=3",
        "--force-grid-wrap=0"
      ]
    },
    "analysis": {
      "typeCheckingMode": "strict",
      "diagnosticMode": "workspace",
      "useLibraryCodeForTypes": true
    }
  },
  "json": {
    "formatter": "prettier",
    "formatterArgs": ["--print-width", "88"],
    "schemas": {
      "http://json-schema.org/draft-07/schema": ["*.json"],
      "http://json.schemastore.org/prettierrc": [".prettierrc", ".prettierrc.json"]
    }
  },
  "search": {
    "exclude": [
      "**/.git",
      "**/.mypy_cache",
      "**/__pycache__",
      "**/.pytest_cache",
      "**/node_modules",
      "**/.env",
      "**/.venv",
      "**/venv",
      "**/*.pyc"
    ]
  },
  "files": {
    "watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/.mypy_cache/**": true,
      "**/__pycache__/**": true,
      "**/.pytest_cache/**": true,
      "**/.env/**": true,
      "**/.venv/**": true,
      "**/venv/**": true
    },
    "associations": {
      "*.py": "python",
      "*.json": "json",
      "requirements*.txt": "pip-requirements",
      "Dockerfile*": "dockerfile",
      "docker-compose*.yml": "dockercompose",
      "*.md": "markdown"
    }
  },
  "terminal": {
    "integrated": {
      "defaultProfile": {
        "osx": "zsh",
        "linux": "bash",
        "windows": "powershell"
      },
      "copyOnSelection": true,
      "rightClickBehavior": "paste"
    }
  },
  "git": {
    "autofetch": true,
    "confirmSync": true,
    "enableSmartCommit": true,
    "suggestSmartCommit": true,
    "autoStash": true
  }
} 